<ul class="letters">
{% for letter in range( 'a', 'z' ) %}
    {% if recipes[letter] %}
    <li><a href="#{{letter}}">{{letter|upper}}</a></li>
    {% endif %}
{% endfor %}
</ul>

<div class="row">
    <div class="col-md-4">
        <ul class="unstyled">
        {% for group in range( 'a', 'i' ) %}
            {% if recipes[group] %}
            <li><h4 class="group" id="{{group}}">{{group|upper}}</h4>
                <ul>
                {% for recipe in recipes[group] %}
                    <li>{%  include 'include/recipe_short.twig' %}</li>
                {% endfor %}
                </ul>
            </li>
            {% endif %}
        {% endfor %}
        </ul>
    </div>
    <div class="col-md-4">
        <ul class="unstyled">
