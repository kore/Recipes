{% extends "index.twig" %}

{% block content %}
    <h2>Tags / Stichwörter</h2>

    <h3>Am populärsten</h3>
    {%include "include/tag_cloud.twig"%}

    <h3>Alle Tags/Stichwörter</h3>
    <ul class="letters">
    {% for letter in range( 'a', 'z' ) %}
        {% if result.grouped[letter] %}
        <li><a href="#{{letter}}">{{letter|upper}}</a></li>
        {% endif %}
    {% endfor %}
    </ul>

    <div class="row">
        <div class="col-md-4">
            <ul class="unstyled">
            {%for group in range( 'a', 'i' ) %}
                {%if result.grouped[group] %}
                <li><h4 class="group" id="{{group}}">{{group|upper}}</h4>
                    <ul>
                    {%for tag in result.grouped[group] %}
                        <li><a href="/recipe/tag/{{tag}}">{{tag}}</a></li>
                    {%endfor%}
                    </ul>
                </li>
                {%endif%}
            {%endfor%}
            </ul>
        </div>
        <div class="col-md-4">
            <ul class="unstyled">
            {%for group in range( 'j', 'q' ) %}
                {%if result.grouped[group] %}
                <li><h4 class="group" id="{{group}}">{{group|upper}}</h4>
                    <ul>
                    {%for tag in result.grouped[group] %}
                        <li><a href="/recipe/tag/{{tag}}">{{tag}}</a></li>
                    {%endfor%}
                    </ul>
                </li>
                {%endif%}
            {%endfor%}
            </ul>
        </div>
        <div class="col-md-4">
            <ul class="unstyled">
            {%for group in range( 'r', 'z' ) %}
                {%if result.grouped[group] %}
                <li><h4 class="group" id="{{group}}">{{group|upper}}</h4>
                    <ul>
                    {%for tag in result.grouped[group] %}
                        <li><a href="/recipe/tag/{{tag}}">{{tag}}</a></li>
                    {%endfor%}
                    </ul>
                </li>
                {%endif%}
            {%endfor%}
            </ul>
        </div>
    </div>

{% endblock %}
